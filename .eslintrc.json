{
    "extends": "airbnb-base",
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "array-bracket-spacing": [
            "error",
            "always",
            {
                "objectsInArrays": false
            }
        ],
        "comma-dangle": [
            "error",
            "only-multiline"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "curly": [
            "error",
            "multi-line"
        ],
        "eol-last": "error",
        "key-spacing": [
            "error",
            {
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "func-names": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true,
                "optionalDependencies": false,
                "peerDependencies": false
            }
        ],
        "indent": [
            "error",
            4
        ],
        "max-len": "off",
        "new-cap": "error",
        "no-bitwise": "off",
        "no-debugger": "error",
        "no-extra-boolean-cast": "error",
        "no-extra-semi": "error",
        "no-mixed-requires": "error",
        "no-multi-spaces": "error",
        "no-multi-str": "error",
        "no-plusplus": "off",
        "no-restricted-syntax": "off",
        "no-return-assign": "off",
        "no-trailing-spaces": "error",
        "no-underscore-dangle": "off",
        "no-unused-vars": "error",
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ],
        "prefer-template": "off",
        "quotes": [
            2,
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ]
    }
};
